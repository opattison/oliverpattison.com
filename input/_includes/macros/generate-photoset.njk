{% macro generate(photoset) %}
  <section class="flex--photo">
  {%- for photo in photoset -%}
    {%- for image in collections.image -%}
      {%- if photo.src == image.data.src -%}
        <figure class="flex-item flex-item--{{ photo.style }}" {% if photo.align %}style="align-self: {{ photo.align }}{% endif %}">
          {% image_full image.data.src, image.data.alt %}
          {%- if photo.caption %}<figcaption>{% markdown photo.caption %}</figcaption>{% endif -%}
        </figure>
      {%- endif -%}
    {%- endfor -%}
  {%- endfor -%}
  </section>
{% endmacro %}