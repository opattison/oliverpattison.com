---
name: Oliver Pattison
subtitle: documentary photography
description: 'Professional documentary photography in Colorado Springs.'
url: 'https://oliverpattison.com'
email: 'hello@oliverpattison.com'
email_src: 'mailto:hello@oliverpattison.com'
phone: '719-355-6483'
phone_src: 'tel:+17193556483'
location: 'Based in Colorado Springs, Colorado.'
portrait:
  src: 'about/2022-op-portrait.jpg'
  alt: 'Oliver Pattison, a documentary photographer'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>{{ title }}</title>
		<meta name="description" content="{{ description }}">
		
		<meta property="og:url" content="{{ url }}">
		<meta property="og:title" content="{{ title }}">
		<meta property="og:description" content="{{ description }}">
		<meta property="og:type" content="{% if page.url == '/about/' %}profile{% else %}article{% endif %}">
		{% if photoset %}
		{% set photo = photoset[0] | first %}
		<meta property="og:image" content="{% image_og photo.src %}">
		<meta property="og:image:alt" content="{{ description }}">
		{% else %}
		<meta property="og:image" content="{% image_og portrait.src %}">
		<meta property="og:image:alt" content="{{ portrait.alt }}">
		{% endif %}
		<meta property="og:image:type" content="image/jpeg">
		<meta property="og:image:width" content="1200">
		<meta property="og:image:height" content="630">
		<meta name="twitter:card" content="summary_large_image">
		
		<link rel="icon" type="image/png" sizes="32x32" href="/icons/icon-32.png">
		<link rel="icon" type="image/svg+xml" href="/icons/icon.svg" >
		<link rel="apple-touch-icon" sizes="192x192" href="/icons/apple-touch-icon.png">
		<link rel="manifest" href="/manifest.webmanifest">
		
		<link rel="preload" as="font" type="font/woff2" href="/fonts/IBMPlexSans-Regular-Latin1.woff2" crossOrigin="anonymous">
		<link rel="preload" as="font" type="font/woff2" href="/fonts/IBMPlexSans-Medium-Latin1.woff2" crossOrigin="anonymous">
		<link rel="preload" as="font" type="font/woff2" href="/fonts/IBMPlexSans-Light-Latin1.woff2" crossOrigin="anonymous">
		<link rel="preconnect" href="https://oliverpattison.imgix.net">
		<link rel="dns-prefetch" href="https://oliverpattison.imgix.net">
		
		{% set css %}
		{% include 'styles/baseline.css' %}
		{% include 'styles/typography.css' %}
		{% include 'styles/structure.css' %}
		{% include 'styles/theme.css' %}
		{% endset %}
		
		<style>
			{{ css | cssmin | safe }}
		</style>
	</head>
	<body>
		<header>
			<div class="boundary">
				{% include 'nav.njk' %}
				<a class="home" href="/"><h1 class="title">{{ name }}</h1></a>
				<h2 class="subtitle">{{ subtitle }}</h2>
			</div>
		</header>
		{{ content | safe }}
		<footer>
			<div class="boundary">
				<div class="contact">
					<ul class="contact-list">
						<li class="contact-item">email: <a href="{{ email_src }}">{{ email }}</a></li>
						<li class="contact-item">text: <a href="{{ phone_src }}">{{ phone }}</a></li>
					</ul>
				</div>
				<div class="location">
					<p>{{ location }}</p>
					<p>Print portfolio available on request.</p>
				</div>
				{% include 'nav--bottom.njk' %}
			</div>
		</footer>
	</body>
</html>