---
layout: base.njk
---

<div class="page page--about">
  <div class="boundary boundary--content">
    <main>
      <section class="entry--about">
      {% if entry %}{% markdown entry %}{% endif %}
      {% if callout %}{% markdown callout %}{% endif %}
      </section>
      {% photo_profile portrait.src, portrait.alt %}
      <ul class="flex--mini">
       {% for image in about.images %}
        <li class="flex-item--mini">{% flex_image image.src, image.alt %}</li>
      {% endfor %}
      </ul>
      <section class="content--about">
      {{ content | safe }}
      </section>
    </main>
    {% include 'nav--page.njk' %}
  </div>
</div>