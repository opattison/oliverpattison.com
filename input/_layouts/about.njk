<div class="page page--about">
  <main>
    {% photo_profile portrait.src, portrait.alt %}
    <section class="introduction--about">
    {% if introduction %}{% markdown introduction %}{% endif %}
    {% if callout %}{% markdown callout %}{% endif %}
    </section>
    <ul class="grid--mini">
     {% for image in about.images %}
      <li class="grid-item--mini">{% grid_image image.src, image.alt %}</li>
    {% endfor %}
    </ul>
    <section class="content--about">
    {{ content | safe }}
    </section>
  </main>
  {% include 'nav-list--home.njk' %}
</div>